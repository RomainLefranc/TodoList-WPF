<Window x:Class="TodoList.DeleteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        Title="Suppression" ResizeMode="NoResize" SizeToContent="Height" Width="292">
    <Grid>
        <Label Content="Voulez vous supprimez cet ligne ?" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Padding="0,5,5,5" Height="26" Width="266"/>

        <Grid VerticalAlignment="Top" Margin="10,36,10,12" Height="38">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="deleteButton" Content="Supprimer" VerticalAlignment="Top" Height="37" Click="DeleteButton_Click" Margin="0,0,5,0"/>
            <Button x:Name="closeButton" Content="Annuler" VerticalAlignment="Top" Margin="5,0,0,0" Height="37" Click="CloseButton_Click" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
